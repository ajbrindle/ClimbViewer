<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/summaryPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="50"
    android:background="@drawable/layout_border"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtLastSegment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_bold"
        android:text="LAST SEGMENT"
        android:textSize="28sp"
        android:maxLines="1"
        android:autoSizeMaxTextSize="28sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="Distance"
            android:maxLines="1"
            android:textSize="40sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/txtSegmentDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="88.88km"
            android:maxLines="1"
            android:textSize="40sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:layout_alignParentRight="true"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="Time"
            android:maxLines="1"
            android:textSize="40sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/txtSegmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="8.88s"
            android:maxLines="1"
            android:textSize="40sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:layout_alignParentRight="true"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="PB"
            android:maxLines="1"
            android:textSize="40sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/txtSegmentPB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="8.88s"
            android:maxLines="1"
            android:textSize="40sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:textColor="@color/design_default_color_primary_dark"
            android:layout_alignParentRight="true"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:id="@+id/txtNewPB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_bold"
        android:text="*** NEW PB ***"
        android:maxLines="1"
        android:textSize="40sp"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeMinTextSize="28sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/greenish"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textStyle="bold" />

</LinearLayout>
