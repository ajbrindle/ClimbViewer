<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClimbsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:id="@+id/layoutTitles">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtClimb"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:text="No climb selected"/>

        <Button
            android:id="@+id/btnChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:icon="@drawable/list_items"
            app:iconSize="20dp"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            app:iconPadding="0dp"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/climbButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutTitles"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/viewClimbBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            app:icon="@drawable/view"
            app:iconSize="20dp"
            app:iconGravity="start"
            app:iconTint="@color/white"
            app:iconPadding="2dp"
            android:text="View" />
        <Button
            android:id="@+id/deleteClimb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorError"
            app:icon="@drawable/delete"
            app:iconSize="20dp"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            app:iconPadding="0dp"
            android:text=""/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/monitorClimbBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/climbButtons"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        app:icon="@drawable/monitor_climb"
        app:iconSize="34dp"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        app:iconPadding="2dp"
        android:text="Monitor Climbs"/>
    <ListView
        android:id="@+id/climbListSel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_below="@+id/climbButtons"
        android:visibility="invisible"/>
</RelativeLayout>