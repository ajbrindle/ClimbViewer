<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".SectionViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="50"
                    android:background="@drawable/layout_border"
                    android:orientation="vertical"
                    android:id="@+id/panel1"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/lblPanel1"
                        style="@style/panelTitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GRADIENT" />

                    <TextView
                        android:id="@+id/txtPanel1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="60sp"
                        android:autoSizeMinTextSize="28sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/oswald_bold"
                        android:maxLines="1"
                        android:text="8.88km"
                        android:textSize="60sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="50"
                    android:background="@drawable/layout_border"
                    android:orientation="vertical"
                    android:id="@+id/panel2"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/lblPanel2"
                        style="@style/panelTitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="REMAINING" />

                    <TextView
                        android:id="@+id/txtPanel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="60sp"
                        android:autoSizeMinTextSize="28sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/oswald_bold"
                        android:maxLines="1"
                        android:text="888m"
                        android:textSize="60sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="50"
                    android:background="@drawable/layout_border"
                    android:orientation="vertical"
                    android:id="@+id/panel3"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/lblPanel3"
                        style="@style/panelTitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NEXT" />

                    <TextView
                        android:id="@+id/txtPanel3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="60sp"
                        android:autoSizeMinTextSize="28sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/oswald_bold"
                        android:maxLines="1"
                        android:text="8.88km"
                        android:textSize="60sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="50"
                    android:background="@drawable/layout_border"
                    android:orientation="vertical"
                    android:id="@+id/panel4"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/lblPanel4"
                        style="@style/panelTitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DIST LEFT" />

                    <TextView
                        android:id="@+id/txtPanel4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="60sp"
                        android:autoSizeMinTextSize="28sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/oswald_bold"
                        android:maxLines="1"
                        android:text="888m"
                        android:textSize="60sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/mapView"
                android:name="com.sk7software.climbviewer.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_map" />

                <LinearLayout
                    android:id="@+id/mirror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border"
                    android:backgroundTint="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/mapView"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:visibility="invisible">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/mirrorMap"
                        android:name="com.sk7software.climbviewer.MapFragment"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />
                </LinearLayout>

            <RelativeLayout
                android:id="@+id/sectionPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mapView">

                <com.sk7software.climbviewer.view.ClimbView
                    android:id="@+id/sectionView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#00ffffff" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
