<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapBoxSettingsActivity">


<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="2D Maps" />

                <TextView
                    android:id="@+id/txt2d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/btn2d"
                    android:layout_marginTop="8dp"
                    android:text="Not Selected"
                    android:layout_marginStart="5dp"
                    android:textSize="8pt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Follow" />

                <TextView
                    android:id="@+id/txtFollow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/btnFollow"
                    android:layout_marginTop="8dp"
                    android:text="Not Selected"
                    android:layout_marginStart="5dp"
                    android:textSize="8pt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="3D Maps" />

                <TextView
                    android:id="@+id/txt3d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/btn3d"
                    android:layout_marginTop="8dp"
                    android:text="Not Selected"
                    android:layout_marginStart="5dp"
                    android:textSize="8pt" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
    <ListView
        android:id="@+id/listMapSel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3d"
        android:paddingTop="3dp"
        android:visibility="visible"/>

</LinearLayout>