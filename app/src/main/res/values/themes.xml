<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClimbViewer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--
        <item name="android:textViewStyle">@style/RideMeisterTextStyle</item>
        <item name="android:buttonStyle">@style/RideMeisterButtonStyle</item>
        <item name="android:switchStyle">@style/RideMeisterSwitchStyle</item>
        <item name="android:spinnerStyle">@style/RideMeisterSpinStyle</item>
        -->
    </style>

    <style name="RideMeisterTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/oswald_bold</item>
    </style>

    <style name="RideMeisterSwitchStyle" parent="android:Widget.Material.CompoundButton.Switch">
        <item name="android:fontFamily">@font/oswald_bold</item>
    </style>

    <style name="RideMeisterSpinStyle" parent="android:Widget.Spinner">
        <item name="android:fontFamily">@font/oswald_bold</item>
    </style>

    <style name="RideMeisterButtonStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/oswald_bold</item>
    </style>

    <style name="cvButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="panelTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:autoSizeMaxTextSize">28sp</item>
        <item name="android:autoSizeMinTextSize">18sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="climbMarkerTextStyle">
        <item name="android:fontFamily">@font/gabarito_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffff00</item>
    </style>

    <style name="Theme.ClimbViewer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ClimbViewer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ClimbViewer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>